{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ESNext", "ES2022"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "allowImportingTsExtensions": false,
    "strict": true,
    "noUncheckedIndexedAccess": false,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noPropertyAccessFromIndexSignature": false,
    "exactOptionalPropertyTypes": false,
    "noImplicitOverride": true,
    "noUncheckedSideEffectImports": false,
    "noEmit": true,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true,
    "removeComments": false,
    "importHelpers": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "allowJs": true,
    "incremental": true,
    "tsBuildInfoFile": ".next/cache/tsbuildinfo.json",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "paths": {
      // ═══════════════════════════════════════════════════
      // PRIMARY ALIASES (# prefix for consistency)
      // ═══════════════════════════════════════════════════

      // Core
      "#/*": ["./src/*"],

      // Components
      "#components/*": ["./src/components/*"],
      "#ui/*": ["./src/components/ui/*"],
      "#layout/*": ["./src/components/layout/*"],
      "#emails/*": ["./src/components/emails/*"],
      "#admin/*": ["./src/components/admin/*"],

      // Library
      "#lib/*": ["./src/lib/*"],
      "#dto/*": ["./src/lib/dto/*"],
      "#actions/*": ["./src/lib/actions/*"],
      "#validations/*": ["./src/lib/validations/*"],
      "#utils/*": ["./src/lib/utils/*"],

      // DAL & DTO (new architecture)
      "#dal": ["./src/dal"],
      "#dal/*": ["./src/dal/*"],
      "#dto": ["./src/dto"],
      "#dto/*": ["./src/dto/*"],

      // Hooks & Types
      "#hooks/*": ["./src/hooks/*"],
      "#types/*": ["./src/types/*"],

      // Database
      "#database/*": ["./src/database/*"],
      "#db/*": ["./src/database/*"],
      "#queries/*": ["./src/database/queries/*"],
      "#mutations/*": ["./src/database/mutations/*"],
      "#schema": ["./src/database/schema.ts"],

      // Services & Stores
      "#services/*": ["./src/services/*"],
      "#stores/*": ["./src/stores/*"],

      // Assets & Styles
      "#styles/*": ["./src/styles/*"],
      "#assets/*": ["./src/assets/*"],
      "#public/*": ["./public/*"],

      // Tests
      "#tests/*": ["./src/tests/*"],

      // ═══════════════════════════════════════════════════
      // SHORT ALIASES (no prefix for common imports)
      // ═══════════════════════════════════════════════════

      "auth": ["./src/lib/auth.ts"],
      "authConfig": ["./src/lib/authConfig.ts"],
      "authAdapter": ["./src/lib/authAdapter.ts"],

      "db": ["./src/database/db.ts"],
      "schema": ["./src/database/schema.ts"],

      "utils": ["./src/lib/utils.ts"],
      "cn": ["./src/lib/utils.ts"],

      "types": ["./src/types/index.ts"],
      "appConfig": ["./app-config.ts"],

      "redis": ["./redis.ts"],
      "env": ["./src/lib/env.ts"],

      // ═══════════════════════════════════════════════════
      // BACKWARDS COMPATIBILITY (@/ prefix)
      // ═══════════════════════════════════════════════════

      "@/*": ["./src/*"],
      "@/components/*": ["./src/components/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/types/*": ["./src/types/*"],
      "@/database/*": ["./src/database/*"],
      "@/services/*": ["./src/services/*"],
      "@/stores/*": ["./src/stores/*"],
      "@/styles/*": ["./src/styles/*"],
      "@/assets/*": ["./src/assets/*"],

      // ═══════════════════════════════════════════════════
      // LEGACY ALIASES (maintain for gradual migration)
      // ═══════════════════════════════════════════════════

      "src/*": ["./src/*"],
      "components/*": ["./src/components/*"],
      "ui/*": ["./src/components/ui/*"],
      "layout/*": ["./src/components/layout/*"],
      "emails/*": ["./src/components/emails/*"],
      "lib/*": ["./src/lib/*"],
      "actions/*": ["./src/lib/actions/*"],
      "hooks/*": ["./src/hooks/*"],
      "database/*": ["./src/database/*"],
      "services/*": ["./src/services/*"],
      "stores/*": ["./src/stores/*"],
      "styles/*": ["./src/styles/*"],
      "assets/*": ["./src/assets/*"]
    }
  },
  "exclude": ["node_modules", ".next", "out", "build", "dist", "coverage"],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.d.ts",
    "**/*.tsx",
    "**/*.mts",
    "**/*.cts",
    "**/*.js",
    "**/*.jsx",
    "**/*.mjs",
    "**/*.cjs",
    ".next/types/**/*.ts",
    "src/**/*",
    "tests/**/*",
    ".next/dev/types/**/*.ts",
    ".prettierrc.ts"
  ]
}
