{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ESNext", "ES2022"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "allowImportingTsExtensions": false,
    "strict": true,
    "noUncheckedIndexedAccess": false,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noPropertyAccessFromIndexSignature": false,
    "exactOptionalPropertyTypes": false,
    "noImplicitOverride": true,
    "noUncheckedSideEffectImports": false,
    "noEmit": true,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true,
    "removeComments": false,
    "importHelpers": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "allowJs": true,
    "incremental": true,
    "tsBuildInfoFile": ".next/cache/tsbuildinfo.json",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "paths": {
      // Primary alias - covers all src imports
      "@/*": ["./src/*"],
      
      // Specific module aliases for cleaner imports
      "#components/*": ["./src/components/*"],
      "#ui/*": ["./src/components/ui/*"],
      "#layout/*": ["./src/components/layout/*"],
      "#emails/*": ["./src/components/emails/*"],
      
      "#lib/*": ["./src/lib/*"],
      "#actions/*": ["./src/lib/actions/*"],
      "#validations/*": ["./src/lib/validations/*"],
      
      "#hooks/*": ["./src/hooks/*"],
      "#types/*": ["./src/types/*"],
      "#styles/*": ["./src/styles/*"],
      "#assets/*": ["./src/assets/*"],
      
      "#database/*": ["./src/database/*"],
      "#queries/*": ["./src/database/queries/*"],
      "#mutations/*": ["./src/database/mutations/*"],
      "#schema": ["./src/database/schema"],
      
      "#services/*": ["./src/services/*"],
      "#stores/*": ["./src/stores/*"],
      
      // Legacy aliases (keep for compatibility)
      "src/*": ["./src/*"],
      "components/*": ["./src/components/*"],
      "ui/*": ["./src/components/ui/*"],
      "layout/*": ["./src/components/layout/*"],
      "emails/*": ["./src/components/emails/*"],
      "lib/*": ["./src/lib/*"],
      "actions/*": ["./src/lib/actions/*"],
      "hooks/*": ["./src/hooks/*"],
      "styles/*": ["./src/styles/*"],
      "assets/*": ["./src/assets/*"],
      "database/*": ["./src/database/*"],
      "services/*": ["./src/services/*"],
      "stores/*": ["./src/stores/*"],
      "types/*": ["./src/types/*"],
      
      // Special aliases
      "appConfig": ["./app-config"],
      "db": ["./src/database/db"],
      "auth": ["./src/lib/auth"],
      "utils": ["./src/lib/utils"],
      "types": ["./src/types/index"]
    }
  },
  "exclude": ["node_modules", ".next", "out", "build", "dist", "coverage"],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.d.ts",
    "**/*.tsx",
    "**/*.mts",
    "**/*.cts",
    "**/*.js",
    "**/*.jsx",
    "**/*.mjs",
    "**/*.cjs",
    ".next/types/**/*.ts",
    "src/**/*",
    "tests/**/*",
    ".next/dev/types/**/*.ts",
    ".prettierrc.ts"
  ]
}
