{
  "name": "comicwise",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "// ═══════════════════════════════════════════════════════════════════════════": "",
    "// DEVELOPMENT": "",
    "// ═══════════════════════════════════════════════════════════════════════════": "",
    "dev": "next dev --turbopack",
    "dev:debug": "NODE_OPTIONS='--inspect' next dev --turbopack",
    "dev:https": "next dev --turbopack --experimental-https",
    "dev:turbo": "next dev --turbopack",
    "predev": "pnpm clean:cache",
    "// ═══════════════════════════════════════════════════════════════════════════": "",
    "// BUILD & PRODUCTION": "",
    "// ═══════════════════════════════════════════════════════════════════════════": "",
    "prebuild": "pnpm clean && pnpm type-check",
    "build": "next build",
    "postbuild": "pnpm dlx next-sitemap --config next-sitemap.config.ts",
    "build:analyze": "ANALYZE=true next build",
    "build:debug": "next build --debug",
    "build:debug:prerender": "next build --debug-prerender",
    "build:profile": "next build --profile",
    "build:standalone": "NEXT_OUTPUT_MODE=standalone next build",
    "analyze-bundle": "ANALYZE=true pnpm build",
    "bundle-size": "pnpm build && size-limit",
    "start": "next start",
    "start:prod": "NODE_ENV=production next start -p 3000",
    "preview": "pnpm build && pnpm start",
    "// ═══════════════════════════════════════════════════════════════════════════": "",
    "// DATABASE": "",
    "// ═══════════════════════════════════════════════════════════════════════════": "",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:pull": "drizzle-kit introspect",
    "db:check": "drizzle-kit check",
    "db:drop": "drizzle-kit drop",
    "db:up": "drizzle-kit up",
    "db:studio": "drizzle-kit studio",
    "db:backup": "pg_dump \"${DATABASE_URL}\" > backup-$(date +%Y%m%d-%H%M%S).sql",
    "db:restore": "psql \"${DATABASE_URL}\" < backup.sql",
    "db:reset": "pnpm db:drop && pnpm db:push && pnpm db:seed",
    "db:reset:hard": "pnpm db:drop && pnpm db:generate && pnpm db:push && pnpm db:seed",
    "db:seed": "tsx --env-file=.env.local src/database/seed/index.ts",
    "db:seed:chapters": "tsx --env-file=.env.local src/database/seed/index.ts --chapters-only",
    "db:seed:comics": "tsx --env-file=.env.local src/database/seed/index.ts --comics-only",
    "db:seed:users": "tsx --env-file=.env.local src/database/seed/index.ts --users-only",
    "db:seed:dry-run": "tsx --env-file=.env.local src/database/seed/index.ts --dry-run",
    "db:seed:no-images": "tsx --env-file=.env.local src/database/seed/index.ts --skip-images",
    "db:seed:verbose": "tsx --env-file=.env.local src/database/seed/index.ts --verbose",
    "// ═══════════════════════════════════════════════════════════════════════════": "",
    "// REDIS & CACHE": "",
    "// ═══════════════════════════════════════════════════════════════════════════": "",
    "redis:start": "docker run --name comicwise-redis -p 6379:6379 -d redis:alpine",
    "redis:stop": "docker stop comicwise-redis",
    "redis:cli": "docker exec -it comicwise-redis redis-cli",
    "redis:flush": "docker exec -it comicwise-redis redis-cli FLUSHALL",
    "cache:clear": "tsx --env-file=.env.local scripts/clear-cache.ts",
    "cache:stats": "tsx --env-file=.env.local scripts/cache-stats.ts",
    "// ═══════════════════════════════════════════════════════════════════════════": "",
    "// QUEUE & BACKGROUND JOBS": "",
    "// ═══════════════════════════════════════════════════════════════════════════": "",
    "queue:worker": "tsx --env-file=.env.local scripts/queue-worker.ts",
    "queue:dashboard": "bull-board --port 3002",
    "queue:clean": "tsx --env-file=.env.local scripts/clean-queue.ts",
    "queue:stats": "tsx --env-file=.env.local scripts/queue-stats.ts",
    "qstash:dashboard": "open https://console.upstash.com/qstash",
    "qstash:test": "tsx --env-file=.env.local scripts/test-qstash.ts",
    "workflow:test": "tsx --env-file=.env.local scripts/test-workflow.ts",
    "// ═══════════════════════════════════════════════════════════════════════════": "",
    "// TESTING": "",
    "// ═══════════════════════════════════════════════════════════════════════════": "",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:codegen": "playwright codegen",
    "test:trace": "playwright test --trace on",
    "test:report": "playwright show-report",
    "test:update-snapshots": "playwright test --update-snapshots",
    "test:chromium": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "test:mobile": "playwright test --project='Mobile Chrome'",
    "test:auth": "playwright test auth.spec.ts",
    "test:crud": "playwright test crud.spec.ts",
    "test:unit": "vitest",
    "test:unit:run": "vitest run",
    "test:unit:watch": "vitest watch",
    "test:unit:coverage": "vitest run --coverage",
    "test:unit:ui": "vitest --ui",
    "test:all": "pnpm test:unit:run && pnpm test",
    "// ═══════════════════════════════════════════════════════════════════════════": "",
    "// CODE QUALITY": "",
    "// ═══════════════════════════════════════════════════════════════════════════": "",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:strict": "eslint . --max-warnings=0",
    "lint:fixtype": "eslint . --fix --fix-type problem,suggestion,layout",
    "lint:cache": "eslint . --cache",
    "format": "prettier --config .prettierrc.ts --write \"**/*.{ts,tsx,js,jsx,mjs,mts,cjs,cts,json,css,md}\"",
    "format:check": "prettier --config .prettierrc.ts --check \"**/*.{ts,tsx,js,jsx,mjs,mts,cjs,cts,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "validate": "pnpm type-check && pnpm lint:strict && pnpm format:check",
    "validate:quick": "pnpm type-check && pnpm lint",
    "cspell": "cspell \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "cspell:fix": "cspell \"**/*.{ts,tsx,js,jsx,json,md}\" --fix",
    "find-deadcode": "ts-prune",
    "find-unused": "tsx scripts/find-unused.ts",
    "// ═══════════════════════════════════════════════════════════════════════════": "",
    "// CI/CD": "",
    "// ═══════════════════════════════════════════════════════════════════════════": "",
    "ci": "pnpm validate && pnpm test:unit:run",
    "ci:full": "pnpm validate && pnpm test:unit:run && pnpm test",
    "ci:build": "pnpm build",
    "ci:lint": "pnpm lint:strict",
    "ci:test": "pnpm test --reporter=json --reporter=html",
    "ci:test:unit": "pnpm test:unit:run",
    "// ═══════════════════════════════════════════════════════════════════════════": "",
    "// DOCKER": "",
    "// ═══════════════════════════════════════════════════════════════════════════": "",
    "docker:build": "docker compose build",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:restart": "docker compose restart",
    "docker:logs": "docker compose logs -f",
    "docker:logs:app": "docker compose logs -f app",
    "docker:logs:db": "docker compose logs -f db",
    "docker:dev": "docker compose -f docker-compose.dev.yml up -d",
    "docker:dev:build": "docker compose -f docker-compose.dev.yml up -d --build",
    "docker:prod": "docker compose -f docker-compose.yml up -d --build",
    "docker:clean": "docker compose down -v --remove-orphans",
    "docker:prune": "docker system prune -af --volumes",
    "docker:shell": "docker compose exec app sh",
    "docker:test": "bash test-docker.sh",
    "// ═══════════════════════════════════════════════════════════════════════════": "",
    "// DEPLOYMENT": "",
    "// ═══════════════════════════════════════════════════════════════════════════": "",
    "deploy:vercel": "vercel --prod",
    "deploy:preview": "vercel",
    "deploy:docker": "pnpm docker:prod",
    "predeploy": "pnpm validate && pnpm build",
    "// ═══════════════════════════════════════════════════════════════════════════": "",
    "// EMAIL": "",
    "// ═══════════════════════════════════════════════════════════════════════════": "",
    "email:dev": "email dev --dir src/components/emails --port 3001",
    "email:export": "email export --dir src/components/emails --out .react-email",
    "email:test": "tsx --env-file=.env.local scripts/test-email.ts",
    "email:preview": "open http://localhost:3001",
    "// ═══════════════════════════════════════════════════════════════════════════": "",
    "// FILE UPLOADS": "",
    "// ═══════════════════════════════════════════════════════════════════════════": "",
    "upload:bulk": "tsx --env-file=.env.local scripts/upload-bulk.ts",
    "upload:bulk:dry-run": "tsx --env-file=.env.local scripts/upload-bulk.ts --dry-run",
    "upload:bulk:imagekit": "tsx --env-file=.env.local scripts/upload-bulk.ts --provider=imagekit",
    "upload:bulk:cloudinary": "tsx --env-file=.env.local scripts/upload-bulk.ts --provider=cloudinary",
    "upload:bulk:aws": "tsx --env-file=.env.local scripts/upload-bulk.ts --provider=aws",
    "upload:comics": "tsx --env-file=.env.local scripts/upload-bulk.ts --path=public/comics",
    "upload:test": "tsx --env-file=.env.local scripts/test-upload.ts",
    "// ═══════════════════════════════════════════════════════════════════════════": "",
    "// UTILITIES": "",
    "// ═══════════════════════════════════════════════════════════════════════════": "",
    "clean": "rimraf .next out dist build .turbo coverage .react-email",
    "clean:cache": "rimraf .next/cache",
    "clean:all": "pnpm clean && rimraf node_modules pnpm-lock.yaml",
    "info": "next info",
    "lighthouse": "lighthouse http://localhost:3000 --view",
    "audit": "pnpm audit",
    "audit:fix": "pnpm audit --fix",
    "dedupe": "pnpm dedupe",
    "check-updates": "pnpm outdated",
    "check-updates:ncu": "ncu -u --deep --packageManager pnpm",
    "update-deps": "pnpm update --interactive --latest",
    "update-deps:minor": "pnpm update --latest -r",
    "update-deps:patch": "pnpm update --latest",
    "update:deps": "pnpm npm-check-updates -u && pnpm install",
    "// ═══════════════════════════════════════════════════════════════════════════": "",
    "// SETUP & INSTALLATION": "",
    "// ═══════════════════════════════════════════════════════════════════════════": "",
    "setup": "pnpm install && pnpm db:push && pnpm db:seed",
    "setup:clean": "pnpm clean && pnpm install && pnpm db:reset",
    "setup:docker": "pnpm clean && docker compose -f docker-compose.dev.yml up -d && pnpm install && pnpm db:push && pnpm db:seed",
    "setup:full": "pnpm clean:all && pnpm install && pnpm db:reset && pnpm build",
    "prepare": "husky",
    "postinstall": "pnpm prisma generate || echo 'Prisma not configured'",
    "// ═══════════════════════════════════════════════════════════════════════════": "",
    "// CODEMOD & MIGRATION": "",
    "// ═══════════════════════════════════════════════════════════════════════════": "",
    "codemod:replace-upload": "jscodeshift -t scripts/codemods/replace-upload-with-hook.jscodeshift.js --extensions=ts,tsx src/app",
    "migrate:v14-to-v15": "tsx scripts/migrate-next-15.ts",
    "// ═══════════════════════════════════════════════════════════════════════════": "",
    "// PRIORITY SYSTEM": "",
    "// ═══════════════════════════════════════════════════════════════════════════": "",
    "priority": "tsx scripts/priority-system.ts",
    "priority:list": "tsx scripts/priority-system.ts list",
    "priority:status": "tsx scripts/priority-system.ts status",
    "priority:complete": "tsx scripts/priority-system.ts complete",
    "priority:run:p0": "tsx scripts/priority-system.ts run P0",
    "priority:run:p1": "tsx scripts/priority-system.ts run P1",
    "priority:run:p2": "tsx scripts/priority-system.ts run P2",
    "priority:run:p3": "tsx scripts/priority-system.ts run P3",
    "// ═══════════════════════════════════════════════════════════════════════════": "",
    "// TYPE GENERATION": "",
    "// ═══════════════════════════════════════════════════════════════════════════": "",
    "types:generate": "tsx scripts/generate-stub-types.ts",
    "types:install": "echo 'Run pnpm install @types/...' as needed",
    "stub": "ts-stub",
    "clear-stub": "ts-stub --clear",
    "// ═══════════════════════════════════════════════════════════════════════════": "",
    "// TELEMETRY": "",
    "// ═══════════════════════════════════════════════════════════════════════════": "",
    "telemetry:disable": "next telemetry disable",
    "telemetry:enable": "next telemetry enable",
    "// ═══════════════════════════════════════════════════════════════════════════": "",
    "// MONITORING & HEALTH": "",
    "// ═══════════════════════════════════════════════════════════════════════════": "",
    "health:check": "tsx --env-file=.env.local scripts/health-check.ts",
    "health:db": "tsx --env-file=.env.local scripts/check-db.ts",
    "health:redis": "tsx --env-file=.env.local scripts/check-redis.ts",
    "health:all": "pnpm health:db && pnpm health:redis"
  },
