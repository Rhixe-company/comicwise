{
  "$schema": "https://raw.githubusercontent.com/modelcontextprotocol/servers/main/schema/mcp-config.schema.json",
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "${workspaceFolder}"],
      "env": {},
      "disabled": false,
      "autoApprove": [
        "read_file",
        "list_directory",
        "get_file_info",
        "search_files",
        "read_multiple_files",
        "write_file",
        "create_directory",
        "move_file",
        "edit_file",
        "directory_tree"
      ],
      "timeout": 60000,
      "retries": 3,
      "description": "Local filesystem operations with full read/write capabilities for ComicWise project"
    },
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${env:GITHUB_TOKEN}"
      },
      "disabled": false,
      "autoApprove": [
        "search_repositories",
        "get_file_contents",
        "list_commits",
        "list_issues",
        "search_code",
        "list_pull_requests",
        "get_issue",
        "search_issues",
        "create_issue",
        "update_issue",
        "create_pull_request",
        "fork_repository"
      ],
      "timeout": 90000,
      "retries": 3,
      "description": "GitHub integration for repository management, PRs, and collaboration"
    },
    "postgres": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-postgres"],
      "env": {
        "DATABASE_URL": "${env:DATABASE_URL}"
      },
      "disabled": false,
      "autoApprove": [
        "list_tables",
        "describe_table",
        "query",
        "list_schemas",
        "get_table_info",
        "list_columns",
        "get_indexes",
        "get_constraints"
      ],
      "timeout": 60000,
      "retries": 3,
      "description": "PostgreSQL database operations for ComicWise schema and data management"
    },
    "memory": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory"],
      "disabled": false,
      "autoApprove": [
        "read_memory",
        "store_memory",
        "delete_memory",
        "list_memories",
        "search_memory"
      ],
      "timeout": 20000,
      "retries": 2,
      "description": "Persistent memory across AI sessions for context retention and knowledge base"
    },
    "fetch": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-fetch"],
      "disabled": false,
      "autoApprove": ["fetch", "get", "post", "put", "delete"],
      "timeout": 45000,
      "retries": 3,
      "description": "HTTP fetch for API testing, external service integration, and web requests"
    },
    "shadcn": {
      "command": "npx",
      "args": ["shadcn@latest", "mcp"],
      "disabled": false,
      "autoApprove": [
        "list_components",
        "add_component",
        "diff_component",
        "update_component",
        "remove_component"
      ],
      "timeout": 90000,
      "retries": 2,
      "description": "shadcn/ui component library management and installation for Next.js 16"
    },
    "next-devtools": {
      "command": "npx",
      "args": ["-y", "next-devtools-mcp@latest"],
      "disabled": false,
      "autoApprove": [
        "analyze_bundle",
        "check_performance",
        "optimize_images",
        "inspect_routes",
        "analyze_build"
      ],
      "timeout": 60000,
      "retries": 2,
      "description": "Next.js 16 development tools with Turbopack optimization and performance analysis"
    },
    "npm": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-npm"],
      "disabled": false,
      "autoApprove": [
        "search_packages",
        "get_package_info",
        "get_package_versions",
        "list_dependencies",
        "check_updates"
      ],
      "timeout": 45000,
      "retries": 3,
      "description": "NPM/pnpm package search, dependency management, and version tracking"
    },
    "docker": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-docker"],
      "disabled": false,
      "autoApprove": [
        "list_containers",
        "inspect_container",
        "list_images",
        "container_logs",
        "container_stats",
        "list_networks",
        "list_volumes"
      ],
      "timeout": 30000,
      "retries": 2,
      "description": "Docker container and image management for ComicWise development environment"
    },
    "git": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-git", "${workspaceFolder}"],
      "disabled": false,
      "autoApprove": [
        "git_status",
        "git_log",
        "git_diff",
        "git_show",
        "list_branches",
        "git_branch",
        "git_commit",
        "git_add",
        "git_reset"
      ],
      "timeout": 45000,
      "retries": 2,
      "description": "Git version control operations and repository management with enhanced capabilities"
    },
    "playwright": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-playwright"],
      "disabled": false,
      "autoApprove": [
        "playwright_navigate",
        "playwright_screenshot",
        "playwright_click",
        "playwright_fill",
        "playwright_evaluate",
        "playwright_select"
      ],
      "timeout": 120000,
      "retries": 2,
      "description": "Playwright E2E testing automation and browser control for ComicWise testing"
    },
    "sequential-thinking": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"],
      "disabled": false,
      "autoApprove": ["think", "analyze", "reason", "plan"],
      "timeout": 90000,
      "retries": 2,
      "description": "Enhanced AI reasoning for complex problem-solving and code optimization"
    },
    "typescript": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-typescript"],
      "disabled": false,
      "autoApprove": [
        "analyze_types",
        "find_references",
        "get_diagnostics",
        "get_completions"
      ],
      "timeout": 45000,
      "retries": 2,
      "description": "TypeScript language server for type checking, refactoring, and code intelligence"
    },
    "time": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-time"],
      "disabled": false,
      "autoApprove": ["get_current_time", "convert_timezone", "format_date"],
      "timeout": 10000,
      "retries": 1,
      "description": "Current time and timezone information for scheduling and logging"
    },
    "redis": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-redis"],
      "env": {
        "REDIS_URL": "${env:REDIS_URL}"
      },
      "disabled": true,
      "autoApprove": ["get", "set", "del", "keys", "info", "flushdb"],
      "timeout": 30000,
      "retries": 2,
      "description": "Redis cache management for ComicWise (enable when Redis is running)"
    },
    "brave-search": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-brave-search"],
      "env": {
        "BRAVE_API_KEY": "${env:BRAVE_API_KEY}"
      },
      "disabled": true,
      "timeout": 45000,
      "retries": 2,
      "description": "Web search via Brave Search API (requires API key)"
    },
    "sqlite": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sqlite",
        "${workspaceFolder}\\data"
      ],
      "disabled": true,
      "description": "SQLite database support (disabled - using PostgreSQL)"
    },
    "everything": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-everything"],
      "disabled": true,
      "timeout": 30000,
      "description": "Windows Everything search integration (Windows-only, optional)"
    },
    "puppeteer": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-puppeteer"],
      "disabled": true,
      "timeout": 90000,
      "description": "Puppeteer web scraping and automation (alternative to Playwright)"
    },
    "everart": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-everart"],
      "env": {
        "EVERART_API_KEY": "${env:EVERART_API_KEY}"
      },
      "disabled": true,
      "timeout": 90000,
      "description": "AI image generation via EverArt API (requires API key)"
    }
  },
  "globalSettings": {
    "timeout": 60000,
    "retries": 3,
    "logLevel": "info",
    "logFile": "${workspaceFolder}\\.vscode\\mcp-logs.txt",
    "maxConcurrentRequests": 15,
    "cacheEnabled": true,
    "cacheTTL": 600,
    "enableMetrics": true,
    "metricsInterval": 300000,
    "healthCheckInterval": 60000
  },
  "windowsSpecific": {
    "useWindowsPaths": true,
    "shellExecutable": "powershell.exe",
    "encodingFix": true,
    "pathSeparator": "\\"
  },
  "performanceSettings": {
    "enableRequestBatching": true,
    "requestBatchSize": 10,
    "enableLazyLoading": true,
    "preloadServers": ["filesystem", "github", "postgres", "git", "typescript"],
    "connectionPoolSize": 5,
    "keepAliveInterval": 30000
  }
}
