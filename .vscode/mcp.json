{
  "$schema": "https://raw.githubusercontent.com/modelcontextprotocol/servers/main/schema/mcp-config.schema.json",
  "globalSettings": {
    "retries": 3,
    "cacheEnabled": true,
    "maxConcurrentRequests": 30,
    "logFile": "${workspaceFolder}\\.vscode\\mcp-logs.txt",
    "cacheTTL": 1800,
    "enableMetrics": true,
    "timeout": 180000,
    "metricsInterval": 300000,
    "logLevel": "info",
    "healthCheckInterval": 90000,
    "enableCompression": true,
    "maxLogFileSize": 20971520
  },
  "mcpServers": {
    "brave-search": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-brave-search"],
      "env": {
        "BRAVE_API_KEY": "${env:BRAVE_API_KEY}"
      },
      "disabled": true,
      "timeout": 45000,
      "retries": 2,
      "description": "Web search via Brave Search API (requires API key)"
    },
    "everart": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-everart"],
      "env": {
        "EVERART_API_KEY": "${env:EVERART_API_KEY}"
      },
      "disabled": true,
      "timeout": 90000,
      "description": "AI image generation via EverArt API (requires API key)"
    },
    "everything": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-everything"],
      "disabled": true,
      "timeout": 30000,
      "description": "Windows Everything search integration (Windows-only, optional)"
    },
    "fetch": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-fetch"],
      "disabled": false,
      "autoApprove": ["fetch", "get", "post", "put", "delete"],
      "timeout": 45000,
      "retries": 3,
      "description": "HTTP fetch for API testing, external service integration, and web requests"
    },
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "${workspaceFolder}"
      ],
      "timeout": 60000,
      "retries": 3,
      "autoApprove": [
        "read_file",
        "list_directory",
        "get_file_info",
        "search_files",
        "read_multiple_files",
        "write_file",
        "create_directory",
        "move_file",
        "edit_file",
        "directory_tree"
      ],
      "description": "Local filesystem operations with full read/write capabilities for ComicWise project",
      "env": {},
      "disabled": false
    },
    "git": {
      "autoApprove": [
        "git_status",
        "git_log",
        "git_diff",
        "git_show",
        "list_branches",
        "git_branch",
        "git_commit",
        "git_add"
      ],
      "timeout": 45000,
      "disabled": false,
      "description": "Git version control operations",
      "command": "npx",
      "retries": 2,
      "args": ["-y", "@modelcontextprotocol/server-git", "${workspaceFolder}"]
    },
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "timeout": 90000,
      "retries": 3,
      "autoApprove": [
        "search_repositories",
        "get_file_contents",
        "list_commits",
        "list_issues",
        "search_code",
        "list_pull_requests",
        "get_issue",
        "search_issues",
        "create_issue",
        "update_issue"
      ],
      "description": "GitHub integration for repository management and collaboration",
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${env:GITHUB_TOKEN}"
      },
      "disabled": false
    },
    "memory": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory"],
      "disabled": false,
      "autoApprove": [
        "read_memory",
        "store_memory",
        "delete_memory",
        "list_memories",
        "search_memory"
      ],
      "timeout": 20000,
      "retries": 2,
      "description": "Persistent memory across AI sessions for context retention and knowledge base"
    },
    "next-devtools": {
      "command": "npx",
      "args": ["-y", "next-devtools-mcp@latest"],
      "disabled": false,
      "autoApprove": [
        "analyze_bundle",
        "check_performance",
        "optimize_images",
        "inspect_routes",
        "analyze_build"
      ],
      "timeout": 60000,
      "retries": 2,
      "description": "Next.js 16 development tools with Turbopack optimization and performance analysis"
    },
    "playwright": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-playwright"],
      "disabled": false,
      "autoApprove": [
        "playwright_navigate",
        "playwright_screenshot",
        "playwright_click",
        "playwright_fill",
        "playwright_evaluate",
        "playwright_select"
      ],
      "timeout": 120000,
      "retries": 2,
      "description": "Playwright E2E testing automation and browser control for ComicWise testing"
    },
    "postgres": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-postgres"],
      "timeout": 60000,
      "retries": 3,
      "autoApprove": [
        "list_tables",
        "describe_table",
        "query",
        "list_schemas",
        "get_table_info",
        "list_columns",
        "get_indexes",
        "get_constraints"
      ],
      "description": "PostgreSQL database operations for ComicWise",
      "env": {
        "DATABASE_URL": "${env:DATABASE_URL}"
      },
      "disabled": false
    },
    "puppeteer": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-puppeteer"],
      "disabled": true,
      "timeout": 90000,
      "description": "Puppeteer web scraping and automation (alternative to Playwright)"
    },
    "redis": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-redis"],
      "env": {
        "REDIS_URL": "${env:REDIS_URL}"
      },
      "disabled": true,
      "autoApprove": ["get", "set", "del", "keys", "info", "flushdb"],
      "timeout": 30000,
      "retries": 2,
      "description": "Redis cache management for ComicWise (enable when Redis is running)"
    },
    "sequential-thinking": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"],
      "disabled": false,
      "autoApprove": ["think", "analyze", "reason", "plan"],
      "timeout": 90000,
      "retries": 2,
      "description": "Enhanced AI reasoning for complex problem-solving and code optimization"
    },
    "shadcn": {
      "command": "npx",
      "args": ["shadcn@latest", "mcp"],
      "disabled": false,
      "autoApprove": [
        "list_components",
        "add_component",
        "diff_component",
        "update_component",
        "remove_component"
      ],
      "timeout": 90000,
      "retries": 2,
      "description": "shadcn/ui component library management and installation for Next.js 16"
    },
    "sqlite": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sqlite",
        "${workspaceFolder}\\data"
      ],
      "disabled": true,
      "description": "SQLite database support (disabled - using PostgreSQL)"
    },
    "time": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-time"],
      "disabled": false,
      "autoApprove": ["get_current_time", "convert_timezone", "format_date"],
      "timeout": 10000,
      "retries": 1,
      "description": "Current time and timezone information for scheduling and logging"
    },
    "typescript": {
      "autoApprove": [
        "analyze_types",
        "find_references",
        "get_diagnostics",
        "get_completions"
      ],
      "timeout": 45000,
      "disabled": false,
      "description": "TypeScript language server for type checking and refactoring",
      "command": "npx",
      "retries": 2,
      "args": ["-y", "@modelcontextprotocol/server-typescript"]
    }
  },
  "performanceSettings": {
    "enableLazyLoading": true,
    "preloadServers": [
      "filesystem",
      "github",
      "postgres",
      "git",
      "typescript",
      "memory"
    ],
    "connectionPoolSize": 8,
    "keepAliveInterval": 45000,
    "requestBatchSize": 15,
    "enableRequestBatching": true,
    "enableResponseCaching": true,
    "cacheDuration": 300
  },
  "windowsSpecific": {
    "pathSeparator": "\\",
    "shellExecutable": "powershell.exe",
    "encodingFix": true,
    "useWindowsPaths": true
  }
}
