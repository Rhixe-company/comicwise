{
  // ═══════════════════════════════════════════════════════════════
  // COMICWISE VSCODE TASKS
  // Common development and build tasks
  // ═══════════════════════════════════════════════════════════════

  "tasks": [
    // ═══════════════════════════════════════════════════════════════
    // SETUP & INSTALLATION
    // ═══════════════════════════════════════════════════════════════
    {
      "label": "Install Dependencies",
      "type": "shell",
      "command": "pnpm",
      "args": ["install"],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },

    // ═══════════════════════════════════════════════════════════════
    // DEVELOPMENT
    // ═══════════════════════════════════════════════════════════════
    {
      "label": "Start Dev Server",
      "type": "shell",
      "command": "pnpm",
      "args": ["dev"],
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Local:.*",
          "endsPattern": "^.*ready - started server.*"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },

    // ═══════════════════════════════════════════════════════════════
    // LINTING & FORMATTING
    // ═══════════════════════════════════════════════════════════════
    {
      "label": "Lint",
      "type": "shell",
      "command": "pnpm",
      "args": ["lint"],
      "problemMatcher": ["$eslint-stylish"],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Lint (Fix)",
      "type": "shell",
      "command": "pnpm",
      "args": ["lint", "--fix"],
      "problemMatcher": ["$eslint-stylish"],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Format",
      "type": "shell",
      "command": "pnpm",
      "args": ["format"],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Format Check",
      "type": "shell",
      "command": "pnpm",
      "args": ["format:check"],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },

    // ═══════════════════════════════════════════════════════════════
    // TYPE CHECKING
    // ═══════════════════════════════════════════════════════════════
    {
      "label": "Type Check",
      "type": "shell",
      "command": "pnpm",
      "args": ["type-check"],
      "problemMatcher": ["$tsc"],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },

    // ═══════════════════════════════════════════════════════════════
    // TESTING
    // ═══════════════════════════════════════════════════════════════
    {
      "label": "Test (Unit)",
      "type": "shell",
      "command": "pnpm",
      "args": ["test:unit:run"],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Test (Unit Watch)",
      "type": "shell",
      "command": "pnpm",
      "args": ["test:unit"],
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*$"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Test (E2E)",
      "type": "shell",
      "command": "pnpm",
      "args": ["test"],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },

    // ═══════════════════════════════════════════════════════════════
    // BUILDING
    // ═══════════════════════════════════════════════════════════════
    {
      "label": "Build",
      "type": "shell",
      "command": "pnpm",
      "args": ["build"],
      "problemMatcher": ["$tsc"],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },

    // ═══════════════════════════════════════════════════════════════
    // DATABASE
    // ═══════════════════════════════════════════════════════════════
    {
      "label": "DB: Migrate",
      "type": "shell",
      "command": "pnpm",
      "args": ["db:migrate"],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "DB: Generate",
      "type": "shell",
      "command": "pnpm",
      "args": ["db:generate"],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "DB: Seed",
      "type": "shell",
      "command": "pnpm",
      "args": ["db:seed"],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "DB: Studio",
      "type": "shell",
      "command": "pnpm",
      "args": ["db:studio"],
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },

    // ═══════════════════════════════════════════════════════════════
    // VALIDATION & CHECKS
    // ═══════════════════════════════════════════════════════════════
    {
      "label": "Validate All",
      "type": "shell",
      "command": "pnpm",
      "args": ["validate"],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },

    // ═══════════════════════════════════════════════════════════════
    // DOCKER
    // ═══════════════════════════════════════════════════════════════
    {
      "label": "Docker: Build",
      "type": "shell",
      "command": "docker-compose",
      "args": ["build"],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Docker: Up",
      "type": "shell",
      "command": "docker-compose",
      "args": ["up", "-d"],
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Docker: Down",
      "type": "shell",
      "command": "docker-compose",
      "args": ["down"],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Docker: Logs",
      "type": "shell",
      "command": "docker-compose",
      "args": ["logs", "-f"],
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },

    // ═══════════════════════════════════════════════════════════════
    // CACHE & REDIS
    // ═══════════════════════════════════════════════════════════════
    {
      "label": "Cache: Clear",
      "type": "shell",
      "command": "pnpm",
      "args": ["cache:clear"],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Cache: Stats",
      "type": "shell",
      "command": "pnpm",
      "args": ["cache:stats"],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },

    // ═══════════════════════════════════════════════════════════════
    // QUEUE & WORKERS
    // ═══════════════════════════════════════════════════════════════
    {
      "label": "Queue: Worker",
      "type": "shell",
      "command": "pnpm",
      "args": ["queue:worker"],
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },

    // ═══════════════════════════════════════════════════════════════
    // HEALTH CHECKS
    // ═══════════════════════════════════════════════════════════════
    {
      "label": "Health: Check",
      "type": "shell",
      "command": "pnpm",
      "args": ["health:check"],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },

    // ═══════════════════════════════════════════════════════════════
    // CLI TOOLS
    // ═══════════════════════════════════════════════════════════════
    {
      "label": "CLI: Scaffold",
      "type": "shell",
      "command": "pnpm",
      "args": ["cli:scaffold"],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ],
  "version": "2.0.0"
}
